    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login / Sign Up</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
     <!-- Navbar -->
     <nav class="navbar">
        <h1 style="margin-left: 46%;">Think Posts</h1>
        </nav>
        <!-- Sign-Up Form -->
        <div class="post2">
            <h2 style="margin-left: 100px;">Sign Up</h2>
            <form action="/signup" method="POST">
                <input class="input2" type="text" name="username" placeholder="Username" required>
                <input class="input2" style="margin-left: 20px;" type="password" name="password" placeholder="Password" required>
                <a style="margin-left: 20px;" href="http://localhost:3000/login">Already have an Account?</a>
                <button type="submit" style="margin-left: 100px; margin-top: 15px;">Sign Up</button>
            </form>
        </div>
